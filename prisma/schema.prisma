generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ServiceType {
  UBER
  LYFT
  TAXI
}

model Route {
  id                  String         @id @default(cuid())
  pickup_address      String
  pickup_lat          Float
  pickup_lng          Float
  destination_address String
  destination_lat     Float
  destination_lng     Float
  distance_miles      Float?
  duration_minutes    Float?
  route_hash          String         @unique
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  // Geohash clustering: store at max precision (8), use prefixes for cluster queries
  pickup_geohash      String?        @db.VarChar(12)
  destination_geohash String?        @db.VarChar(12)
  geohash_precision   Int            @default(8)

  savedRoutes    SavedRoute[]   @relation("RouteToSavedRoute")
  rideHistories  RideHistory[]
  searchLogs     SearchLog[]
  priceSnapshots PriceSnapshot[]
  trafficLogs    TrafficLog[]

  @@index([createdAt])
  @@index([pickup_geohash, destination_geohash])
}

model PriceSnapshot {
  id              String     @id @default(cuid())
  route           Route      @relation(fields: [routeId], references: [id])
  routeId         String
  service         ServiceType
  base_price      Float
  surge_multiplier Float     @default(1.0)
  final_price     Float
  wait_time_minutes Int?
  drivers_nearby  Int?
  day_of_week     Int
  hour_of_day     Int
  weather_condition String?
  weather_temp_f  Float?
  is_raining      Boolean    @default(false)
  traffic_level   TrafficLevel?
  nearby_events   String[]   @default([])
  createdAt       DateTime   @default(now())
  is_holiday      Boolean    @default(false)
  confidence      Float?

  @@index([routeId, service, createdAt])
}

model SearchLog {
  id           String   @id @default(cuid())
  user         User?    @relation(fields: [userId], references: [id])
  userId       String?
  route        Route?   @relation(fields: [routeId], references: [id])
  routeId      String?
  session_id   String?
  results_shown Json?
  ip_address    String?
  user_agent    String?
  did_book      Boolean   @default(false)
  booked_service ServiceType?
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([routeId])
  @@index([createdAt])
}

model EventLog {
  id          String   @id @default(cuid())
  event_name  String
  venue       String?
  coords_lat  Float?
  coords_lng  Float?
  event_type  String?
  start_time  DateTime
  end_time    DateTime?
  expected_attendance Int?
  raw_data    Json?
  createdAt   DateTime @default(now())
  ticket_price_range String?

  @@index([start_time])
  @@index([coords_lat, coords_lng])
}

model WeatherLog {
  id          String   @id @default(cuid())
  coords_lat  Float
  coords_lng  Float
  temperature_f Float?
  condition   String?
  precipitation_inch Float?
  wind_speed_mph Float?
  visibility_miles Float?
  is_severe   Boolean  @default(false)
  raw_data    Json?
  createdAt   DateTime @default(now())
  loggedAt    DateTime @default(now())

  @@index([coords_lat, coords_lng, createdAt])
}

model TrafficLog {
  id          String      @id @default(cuid())
  route       Route       @relation(fields: [routeId], references: [id])
  routeId     String
  traffic_level TrafficLevel?
  delay_minutes Int?
  incidents    Json?
  createdAt    DateTime @default(now())

  @@index([routeId, createdAt])
}

enum TrafficLevel {
  LIGHT
  MODERATE
  HEAVY
  SEVERE
}

model SavedRoute {
  id          String     @id @default(cuid())
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  route       Route?     @relation("RouteToSavedRoute", fields: [routeId], references: [id])
  routeId     String?    @unique
  fromName    String
  fromLat     Float
  fromLng     Float
  toName      String
  toLat       Float
  toLng       Float
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  priceAlerts PriceAlert[]
  rideHistories RideHistory[]
}

model PriceAlert {
  id             String       @id @default(cuid())
  user           User         @relation(fields: [userId], references: [id])
  userId         String
  savedRoute     SavedRoute   @relation(fields: [savedRouteId], references: [id])
  savedRouteId   String
  service        ServiceType
  targetPrice    Float
  isActive       Boolean      @default(true)
  lastTriggeredAt DateTime?
  triggerCount   Int         @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model RideHistory {
  id                 String       @id @default(cuid())
  user               User?        @relation(fields: [userId], references: [id])
  userId             String?
  savedRoute         SavedRoute?  @relation(fields: [savedRouteId], references: [id])
  savedRouteId       String?
  route              Route?       @relation(fields: [routeId], references: [id])
  routeId            String?
  service            ServiceType
  estimatedFare      Float
  finalFare          Float?
  waitTimeMinutes    Int?
  surgeMultiplier    Float?
  comparisonSnapshot Json
  requestedAt        DateTime     @default(now())
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  emailVerified DateTime?
  name          String?
  image         String?       // NextAuth uses 'image' instead of 'avatarUrl'
  avatarUrl     String?       // Keep for backward compatibility
  password      String?       // For credentials provider
  preferredService ServiceType?
  notificationEnabled Boolean @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // NextAuth relations
  accounts      Account[]
  sessions      Session[]
  
  // App-specific relations
  savedRoutes   SavedRoute[]
  priceAlerts   PriceAlert[]
  rideHistories RideHistory[]
  searchLogs    SearchLog[]
}

enum AlertType {
  BELOW
  ABOVE
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
